<ActionBar title="Details" class="action-bar">
    <NavigationButton text="Back" android.systemIcon="ic_menu_back" (tap)="backPressed()"></NavigationButton>
    <ActionItem ios.systemIcon="3" ios.position="right" android.systemIcon="ic_menu_save" (tap)="savePressed()"></ActionItem>
</ActionBar>

<StackLayout class="form" margin="3%" id="form_stack">
    <Label text="Name" class="label m-b-1 m-l-10"></Label>
    <TextField class="input input-rounded m-t-5 m-b-20 " [(ngModel)]="contact.name"></TextField>
    <Label text="Email" class="label m-b-1 m-l-10"></Label>
    <TextField class="input input-rounded m-t-5 " [(ngModel)]="contact.email"></TextField>
</StackLayout>